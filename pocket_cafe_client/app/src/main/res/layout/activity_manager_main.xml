<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerMainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#c0392b">

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logo_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="here\u0026now"
                android:textSize="19dp"
                android:textColor="#fff"
                android:layout_marginTop="-5dp"
                android:gravity="center"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:id="@+id/tv_greet"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:paddingTop="30dp"
        android:layout_above="@id/layout_btns"
        android:text="...님, 안녕하세요!"
        android:textSize="22dp"
        android:gravity="center"
        android:textColor="#000" />

    <RelativeLayout
        android:id="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_centerVertical="true"
        android:gravity="center">

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/btn_morder"/>

                <Button
                    android:id="@+id/btn_morder"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/btn_shape1"
                    android:paddingTop="75dp"
                    android:text="주문 관리"
                    android:textSize="15dp"
                    android:textColor="#757575"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/btn_mstore"/>

                <Button
                    android:id="@+id/btn_mstore"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/btn_shape1"
                    android:paddingTop="75dp"
                    android:text="매장 관리"
                    android:textSize="15dp"
                    android:textColor="#757575"/>

            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_centerVertical="true"
            android:layout_below="@id/linear1"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="5dp">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="7dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/btn_mmenu"/>

                <Button
                    android:id="@+id/btn_mmenu"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/btn_shape1"
                    android:paddingTop="75dp"
                    android:text="메뉴 관리"
                    android:textSize="15dp"
                    android:textColor="#757575"/>

            </FrameLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp">

                <ImageView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/btn_mid"/>

                <Button
                    android:id="@+id/btn_mid"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:background="@drawable/btn_shape1"
                    android:paddingTop="75dp"
                    android:text="계정 관리"
                    android:textSize="15dp"
                    android:textColor="#757575"/>

            </FrameLayout>

        </LinearLayout>

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_btns"
        android:gravity="center"
        android:text="로그아웃"
        android:textSize="20dp"
        android:textColor="#000"
        android:clickable="true"
        android:layout_marginTop="-5dp"
        />

</RelativeLayout>