<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManagerMypageActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#c0392b">

        <Button
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/btn_back"
            android:layout_marginTop="5dp"/>

        <LinearLayout
            android:layout_width="100dp"
            android:layout_height="60dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="center">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/logo_img" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="here\u0026now"
                android:textSize="19dp"
                android:textColor="#fff"
                android:layout_marginTop="-5dp"
                android:gravity="center"/>

        </LinearLayout>

    </FrameLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:text="계정 관리"
        android:gravity="center_horizontal"
        android:paddingTop="50dp"
        android:layout_above="@id/layout_btns"
        android:textSize="25dp"
        android:textColor="#000"/>

    <LinearLayout
        android:id="@+id/layout_btns"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:layout_marginBottom="5dp">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="7dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/btn_ch_info"/>

            <Button
                android:id="@+id/btn_changeinfo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_shape1"
                android:paddingTop="75dp"
                android:text="개인정보 수정"
                android:textSize="15dp"
                android:textColor="#757575"/>

        </FrameLayout>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp">

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/btn_ch_pwd"/>

            <Button
                android:id="@+id/btn_changepwd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:background="@drawable/btn_shape1"
                android:paddingTop="75dp"
                android:text="비밀번호 변경"
                android:textSize="15dp"
                android:textColor="#757575"/>

        </FrameLayout>

    </LinearLayout>

</RelativeLayout>