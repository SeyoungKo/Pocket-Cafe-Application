<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:id="@+id/add_scrollview"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="400dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="메뉴 추가"
            android:gravity="center"
            android:textSize="20dp"
            android:background="#c0392b"
            android:textColor="#fff"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 이름"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginRight="30dp"
                android:background="@drawable/edittext2"
                android:inputType="text"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 가격"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <EditText
                android:id="@+id/et_price"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:background="@drawable/edittext2"
                android:inputType="number"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="15dp"
                android:gravity="center"
                android:textColor="#000"
                android:layout_marginRight="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 따뜻한 음료"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"/>

            <RadioGroup
                android:id="@+id/radio_hot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_hot1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가능"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

                <RadioButton
                    android:id="@+id/radio_hot2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불가능"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hot_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가금액"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="110dp"/>

            <EditText
                android:id="@+id/et_hot_price"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:background="@drawable/edittext2"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 차가운 음료"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"/>

            <RadioGroup
                android:id="@+id/radio_ice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_ice1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가능"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

                <RadioButton
                    android:id="@+id/radio_ice2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불가능"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ice_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가금액"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="110dp"/>

            <EditText
                android:id="@+id/et_ice_price"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:background="@drawable/edittext2"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 사이즈"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="15dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(중복 선택 가능)"
                android:textColor="#000"
                android:textSize="14dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/check_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="레귤러"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:id="@+id/regular_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가금액"
                    android:textSize="14dp"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/et_regular_price"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edittext2"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/check_large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="라지"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="33dp"/>

            <LinearLayout
                android:id="@+id/large_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가금액"
                    android:textSize="14dp"
                    android:textColor="#000" />

                <EditText
                    android:id="@+id/et_large_price"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edittext2"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/check_xlarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="엑스라지"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="30dp"/>

            <LinearLayout
                android:id="@+id/xlarge_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="추가금액"
                    android:textSize="14dp"
                    android:textColor="#000"/>

                <EditText
                    android:id="@+id/et_xlarge_price"
                    android:layout_width="60dp"
                    android:layout_height="35dp"
                    android:background="@drawable/edittext2"
                    android:layout_marginLeft="5dp"
                    android:inputType="number"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="원"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="5dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="* 포장"
                android:textSize="15dp"
                android:textColor="#000"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"/>

            <RadioGroup
                android:id="@+id/radio_takeout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="20dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radio_takeout1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="가능"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

                <RadioButton
                    android:id="@+id/radio_takeout2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="불가능"
                    android:textSize="14dp"
                    android:textColor="#000"
                    android:layout_marginLeft="10dp"/>

            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/takeout_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가금액"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="100dp"/>

            <EditText
                android:id="@+id/et_takeout_price"
                android:layout_width="60dp"
                android:layout_height="32dp"
                android:background="@drawable/edittext2"
                android:layout_marginLeft="10dp"
                android:inputType="number"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"
                android:textSize="14dp"
                android:textColor="#000"
                android:layout_marginLeft="5dp"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="* 사진"
            android:textSize="15dp"
            android:textColor="#000"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(첨부된 사진을 터치하면 삭제할 수 있습니다.)"
            android:layout_marginLeft="20dp"/>

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/img"
                android:layout_width="300dp"
                android:layout_height="150dp"
                android:background="#e0e0e0"
                android:clickable="true"/>

            <ImageView
                android:id="@+id/img_add"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:background="@drawable/btn_add_picture"/>

            <TextView
                android:id="@+id/tv_add"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="첨부할 사진을 선택하세요."
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="115dp"
                android:textSize="18dp"
                android:textColor="#000"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

            <Button
                android:id="@+id/btn_add_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#c0392b"
                android:text="추가"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_margin="2dp"/>

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#c0392b"
                android:text="취소"
                android:textSize="15dp"
                android:textColor="#fff"
                android:layout_margin="2dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>